            $.ajax({
                url: "@Url.Action("GetAgencyFareAmount", "Returnment")",
                data: { custID: $('#CustomerID').val() },
                type: "GET",
                dataType: "json",
                success: function (data) {
                    //loadData(data);
                    $('#Rate1').val(data.EmptyFixAmt);
                    $('#Rate2').val(data.PerCaseAmt);
                    $('#Rate3').val(data.SpecialRatePerCase);
