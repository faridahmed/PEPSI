                error: function () {
                    alert("Failed! Warehouse ID not Set for Fare!");
                }
            });

        });
        //Radio option
        $("#r1").change(function () {
            var FAmnt = $("#Rate1").val();
            $("#FareAmnt").val(FAmnt);
        });
        $("#r2").change(function () {
            var FAmnt = parseFloat($("#Rate2").val());
            var totcase = parseInt($("#ReturnGoodsQty").val());
            var amt = totcase * FAmnt;
            $("#FareAmnt").val(amt);
        });
        $("#r3").change(function () {
            //var FAmnt = $("#Rate3").val();
            var FAmnt = parseFloat($("#Rate3").val());
            var totcase = parseInt($("#ReturnGoodsQty").val());
            var amt = totcase * FAmnt;
            $("#FareAmnt").val(amt);
        });
