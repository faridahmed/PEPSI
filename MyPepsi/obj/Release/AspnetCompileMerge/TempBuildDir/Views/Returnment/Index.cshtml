        var c = $('#ReturnQty').val();
        $.ajax({
            url: "@Url.Action("GetReturnAmt", "Returnment")",
            data: { inCustID: $('#CustomerID').val(), inProduct: $('#ProductID').val(), inCase: $('#ReturnQty').val(), inPlastic: $('#PlasticBox').val(), inTrType: $('#ReturnTypeID').val() },
