
@{
    ViewBag.Title = "Index";
}

<h2>Upload Distributor Target</h2>

<div class="panel-body">
    <div class="col-md-6">
        <div>
            <label>Target ID:</label>
            @Html.TextBox("targetID", (string)ViewBag.TargetID, new { @class = "form-control", @readonly = "readonly" })
            <label>Target Description:</label>
            @Html.TextBox("targetDes", null, new { @class = "form-control" })
            <label>Start Date:</label>
            @Html.TextBox("startDate", DateTime.Now.ToString("dd-MMM-yyyy"), new { @class = "form-control date-picker" })
            <label>End Date:</label>
            @Html.TextBox("endDate", DateTime.Now.ToString("dd-MMM-yyyy"), new { @class = "form-control date-picker" })
                 </div>
    </div>
    <div>
        <label>Dstributor:</label>
        @Html.DropDownList("CustomerLists", null, "Select Dstibutor", new { @class = "form-control" })
        <label>Target Type:</label>
        @Html.DropDownList("targetType", null, "Select Customer", new { @class = "form-control" })
        
    </div>
</div>
<div align="left">
    @if (ViewBag.Message != null)
    {
        <span class="alert alert-warning"> @ViewBag.Message</span>
    }

    <div align="left" class="btn btn-default">
        @using (Html.BeginForm("UploadExcel", "ExcelDemo", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            <input type="file" id="fileUpload" class="btn btn-primary" name="FileUpload" /><br />
            <input type="submit" class="btn btn-primary" name="UploadNewEmployee" id="fileUploadExcel" value="Upload DB Target" />
        }
    </div>
</div>
 
<table class="table table-striped table-bordered table-responsive" id="tbl">
    <tr id="tr1">
        <th>SL</th>
        <th>Prodct ID</th>
        <th>Prodct Name</th>
        <th>Target Quantity(Cases)</th>

    </tr>
</table>
<script>
    $("#CustomerLists").prop('disabled', true);
    $('.date-picker').datepicker({
        dateFormat: "dd/M/yy",
        changeMonth: true,
        changeYear: true,
        yearRange: "-0:+0"
    });
    $('#fileUploadExcel').click(function (e) {
        if ($('#fileUpload').val() === "") {
            alert("Oops...!!! Please select file");
            return false;
        }

    });

</script>